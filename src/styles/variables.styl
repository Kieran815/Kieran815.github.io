html
  --base-font-size 20px

body
  --bg-color #2a3439
  --bg-content-color #0a1526
  --title-color #fff
  --body-color #fff
  --primary-color #83f52c
  --secondary-color #f3f315
  --disabled-color #888
  --radius 6px
  --space 3.5rem
  --header-height 80px
  --content-width 860px
  --transition-fast 0.2s
  --transition-normal 0.4s
  --transition-slow 0.6s
  --bg-code rgba(	110, 13, 208, 0.3)
  --border-color rgba(255, 255, 255, 0.1)

@media screen and (max-width 650px)
  html
    --base-font-size 17px

  body
    --space 1.5rem
    --header-height 60px
